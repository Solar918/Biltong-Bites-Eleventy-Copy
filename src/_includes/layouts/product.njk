---
layout: layouts/base.njk
title: "{{ title }}"
description: "{{ description }}"
---

<article class="container product-detail">
  <header>
    <h1>{{ title }}</h1>
    {% if price %}
    <p class="price" data-unit-price="{{ price }}">${{ price }}</p>
    {% endif %}
    <div class="quantity-selector">
      <button type="button" class="qty-btn minus" aria-label="Decrease quantity">âˆ’</button>
      <input type="number" class="qty-input" value="1" min="1" aria-label="Quantity" />
      <button type="button" class="qty-btn plus" aria-label="Increase quantity">+</button>
      <button type="button" class="qty-btn add-to-cart" aria-label="Add to cart">Add to Cart</button>
    </div>
  </header>
  {% if image %}
  <div class="detail-image">
    <img src="{{ image }}" alt="{{ title }}" />
  </div>
  {% endif %}
  <div class="detail-info">
    <p>{{ description }}</p>
  </div>
  <a href="/" class="btn">Back to products</a>
</article>
